<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"

        tools:context=".MainActivity">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="177dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView"
            android:layout_margin="40dp"
    />
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/textView1"
            android:textAlignment="center"
            tools:text="This is basic CRUD project. Choose action you like"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="40dp"
    >
        <Button
                android:text="Read Data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/btnRead"/>
        <Button
                android:text="Create Data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="388dp"
                tools:layout_editor_absoluteX="30dp" android:id="@+id/btnCreate"/>
        <Button
                android:text="Update Data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:id="@+id/btnUpdate"/>
        <Button
                android:text="Delete Data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:id="@+id/btnDelete"/>

    </RelativeLayout>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/textView2"
            android:textAlignment="center"
            tools:text="Some text. Choose action you like"/>
    <Button
            android:text="Send Data to Cloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/btnSend"/>
</LinearLayout>