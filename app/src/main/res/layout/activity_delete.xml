<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DeleteActivity">

    <EditText android:layout_width="match_parent"
              android:layout_height="50dp"
              android:id="@+id/edtTitleDelete"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
              android:layout_marginRight="32dp" android:layout_marginTop="105dp"
              app:layout_constraintTop_toBottomOf="@+id/textView8d"/>
    <TextView
            android:text="Choose Title To Delete:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3d"
            android:padding="10dp"
            tools:textSize="18sp" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginBottom="17dp" app:layout_constraintBottom_toTopOf="@+id/edtTitleDelete"/>
    <TextView
            android:text="Delete Acvtivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8d" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="28dp" android:layout_marginTop="56dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="Delete Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDeleteActivity" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/edtTitleDelete"/>
</android.support.constraint.ConstraintLayout>